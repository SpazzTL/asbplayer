{
    "private": true,
    "name": "@project/extension",
    "version": "0.1.0",
    "type": "module",
    "scripts": {
        "dev": "wxt",
        "dev:firefox": "wxt -b firefox",
        "dev:firefox-android": "wxt -b firefox-android --mv2",
        "build": "wxt build",
        "build:firefox": "wxt build -b firefox",
        "build:firefox-android": "wxt build -b firefox-android --mv2",
        "zip": "yarn check && wxt zip",
        "zip:firefox": "yarn check && wxt zip -b firefox",
        "zip:firefox-android": "yarn check && wxt zip -b firefox-android --mv2 --sources",
        "compile": "tsc --noEmit",
        "postinstall": "wxt prepare",
        "check": "yarn workspace root run verify && yarn compile",
        "test": "jest"
    },
    "dependencies": {
        "@emotion/react": "^11.14.0",
        "@emotion/styled": "^11.14.0",
        "@mui/icons-material": "^6.4.3",
        "@mui/material": "^6.4.3",
        "@mui/styles": "^6.4.3",
        "@project/common": "0.1.0",
        "@types/chrome": "^0.0.261",
        "@types/dom-mediacapture-record": "^1.0.11",
        "@types/react": "^18.0.0",
        "@types/react-dom": "^18.0.0",
        "@types/semver": "^7.3.9",
        "@types/uuid": "^8.3.4",
        "i18next": "^22.4.14",
        "m3u8-parser": "^6.0.0",
        "mpd-parser": "^1.3.0",
        "react": "^18.0.0",
        "react-dom": "^18.0.0",
        "react-i18next": "^12.2.0",
        "regenerator-runtime": "^0.13.7",
        "semver": "^7.3.7",
        "typescript": "~5.7.2",
        "uuid": "8.3.2"
    },
    "devDependencies": {
        "@types/jest": "^29.5.14",
        "@wxt-dev/module-react": "^1.1.3",
        "jest": "^29.7.0",
        "ts-jest": "^29.2.5",
        "wxt": "^0.20.3"
    }
}
